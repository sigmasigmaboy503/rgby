-- Create the ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RadzSocialsGUI"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Show a notification when the GUI opens
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "RadzSocials",
    Text = "Thank You For Using This Script.",
    Duration = 3 -- The notification will stay for 3 seconds
})

-- Show a second notification
wait(3) -- Wait for the first notification to finish
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "RadzSocials",
    Text = "THIS IS BETA DONT THINK IT WORKS AUTOMATICALLY.",
    Duration = 5 -- This notification will stay for 5 seconds
})

-- Create the Background Frame (White)
local backgroundFrame = Instance.new("Frame")
backgroundFrame.Parent = screenGui
backgroundFrame.Size = UDim2.new(0, 400, 0, 600)  -- Set a fixed size for the background
backgroundFrame.Position = UDim2.new(0.5, -200, 0.5, -300)  -- Center the frame
backgroundFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)  -- White background
backgroundFrame.BackgroundTransparency = 0  -- No transparency, solid white
backgroundFrame.BorderSizePixel = 0  -- No border

-- Add UIStroke to the background frame for the stroke effect
local backgroundStroke = Instance.new("UIStroke")
backgroundStroke.Parent = backgroundFrame
backgroundStroke.Thickness = 2  -- Set the stroke thickness
backgroundStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
backgroundStroke.Color = Color3.fromRGB(0, 0, 0)  -- Stroke color (black)

-- Create the Title Label
local title = Instance.new("TextLabel")
title.Parent = backgroundFrame  -- Parent the title to the background frame
title.Size = UDim2.new(0, 400, 0, 50)
title.Position = UDim2.new(0, 0, 0, 10)  -- Adjusted position so it doesn't collide with buttons
title.Text = "RadzSocials GUI"
title.TextSize = 24
title.TextColor3 = Color3.fromRGB(0, 0, 0)  -- Black text color
title.BackgroundTransparency = 1
title.TextScaled = true

-- Add UIStroke to the title for the stroke effect
local titleStroke = Instance.new("UIStroke")
titleStroke.Parent = title
titleStroke.Thickness = 2  -- Set the stroke thickness
titleStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
titleStroke.Color = Color3.fromRGB(0, 0, 0)  -- Stroke color (black)

-- Function to create buttons
local function createButton(text, position, parent)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 200, 0, 50)
    button.Position = position
    button.Text = text
    button.TextSize = 18
    button.TextColor3 = Color3.fromRGB(255, 255, 255)  -- White text color
    button.BackgroundColor3 = Color3.fromRGB(0, 0, 255)  -- Blue button
    button.Parent = parent
    
    -- Add UIStroke to the button for the stroke effect
    local buttonStroke = Instance.new("UIStroke")
    buttonStroke.Parent = button
    buttonStroke.Thickness = 2  -- Set the stroke thickness
    buttonStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    buttonStroke.Color = Color3.fromRGB(0, 0, 0)  -- Stroke color (black)

    -- Button click event
    button.MouseButton1Click:Connect(function()
        print(text .. " Button Clicked!")

        -- Check if this is the first button (Button 1)
        if text == "Button 1" then
            -- Run the command immediately
            loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
        end
    end)
    
    return button
end

-- Create 10 buttons
for i = 1, 10 do
    local buttonPosition = UDim2.new(0.5, -100, 0, 70 + (i-1) * 55) -- Adjusted spacing to fix collision with title
    createButton("Button " .. i, buttonPosition, backgroundFrame)
end

-- Code for making the ScreenGui movable
local dragging, dragInput, dragStart, startPos

-- Function to start dragging
title.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = screenGui.Position
        input.Consumed = true
    end
end)

-- Function to update dragging position
game:GetService("UserInputService").InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        screenGui.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Function to stop dragging
game:GetService("UserInputService").InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

-- Create the Close (X) Button
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 10) -- Positioned at the top-right of the title
closeButton.Text = "X"
closeButton.TextSize = 18
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)  -- White text color for the X button
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)  -- Red button
closeButton.Parent = backgroundFrame

-- Add UIStroke to the close button for the stroke effect
local closeButtonStroke = Instance.new("UIStroke")
closeButtonStroke.Parent = closeButton
closeButtonStroke.Thickness = 2  -- Set the stroke thickness
closeButtonStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
closeButtonStroke.Color = Color3.fromRGB(0, 0, 0)  -- Stroke color (black)

-- Close the GUI when the X button is clicked
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()  -- This will remove the entire GUI
end)
